# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#GET    /hotel_profile               com.travelportal.controllers.TravelPortalUtilsController.hotel_profile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST  /hotel_profile/:profileId 		com.travelportal.controllers.HotelProfileController.hotelProfile(profileId: Integer)
GET /countries						com.travelportal.controllers.TravelPortalUtilsController.getCountries()
GET   /cities/:countryCode				com.travelportal.controllers.TravelPortalUtilsController.getCities(countryCode: Integer)
POST  /saveGeneralInfo                com.travelportal.controllers.TravelPortalUtilsController.saveGeneralInfo()
POST  /updateDescription         com.travelportal.controllers.TravelPortalUtilsController.getupdateDescription()
GET   /hotelchains                    com.travelportal.controllers.TravelPortalUtilsController.getChainHotels()
GET   /currency                    com.travelportal.controllers.TravelPortalUtilsController.getcurrency()
GET   /hotelbrands                com.travelportal.controllers.TravelPortalUtilsController.gethotelbrand()
GET   /starrating                com.travelportal.controllers.TravelPortalUtilsController.getstarrating()
GET   /marketrate                com.travelportal.controllers.TravelPortalUtilsController.getmarketrate()
GET   /location                com.travelportal.controllers.TravelPortalUtilsController.getlocations()
GET   /shoppingfacility                com.travelportal.controllers.TravelPortalUtilsController.getshoppingfacility()
GET   /nightlife                com.travelportal.controllers.TravelPortalUtilsController.getnightlife()
GET   /services                com.travelportal.controllers.TravelPortalUtilsController.getservices()
POST  /updateInternalInfo         com.travelportal.controllers.TravelPortalUtilsController.getupdateInternalInfo()
POST  /updateContactInfo         com.travelportal.controllers.TravelPortalUtilsController.getupdateContactInfo()
POST  /updateComunication         com.travelportal.controllers.TravelPortalUtilsController.getupdateComunication()


