# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#GET    /hotel_profile               controllers.Application.hotel_profile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET /hotel_profile/:profileId 		com.travelportal.controllers.HotelProfileController.hotelProfile(profileId: Integer)
GET /countries						com.travelportal.controllers.TravelPortalUtilsController.getCountries()
GET /cities/:countryCode				com.travelportal.controllers.TravelPortalUtilsController.getCities(countryCode: Integer)
POST  /saveGeneralInfo                           com.travelportal.controllers.TravelPortalUtilsController.saveGeneralInfo()